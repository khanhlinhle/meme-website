<div class="container">
{{#if images}}
{{#each images}}
  <button class="btn btn-outline-secondary img-part" data-toggle="modal" data-target="#myModal-{{filename}}">
    <img src="{{../imagePath}}{{filename}}" alt="{{filename}}" height="200px"/>
  </button>

  <div class="modal fade" id="myModal-{{filename}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <form method="post" action="/addtext/{{filename}}">
        <div class="modal-content">
          <div class="modal-header bg-light">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        <div class="modal-body">
          <img src="{{../imagePath}}{{filename}}" alt="{{filename}}" height="200px" width="100%"/>
            <div class="form-group">
                <input type="text" class="form-control" name="top" placeholder="Top text">
            </div>
            <div class="form-group">
                 <input type="text" class="form-control" name="bottom" placeholder="Bottom text">
            </div>
        </div>
        <div class="modal-footer bg-light">
          <input type="submit" class="btn btn-outline-primary" value="Save" name="Save" />
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
      </form>
    </div>
  </div>
{{/each}}
{{/if}}
</div>

